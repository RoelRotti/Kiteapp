<?xml version="1.0"?>
<knowledge>
	<title>Wereldkennis over regen</title>
	<description>Een demonstratie van wat dit kennissysteem zou moeten kunnen.</description>

	<rule>
		<description>Als het regent, is de straat nat.</description>
		<when_any>
			<fact name="het_regent">ja</fact>
			<when_all>
				<fact name="het_heeft_geregend">ja</fact>
				<fact name="zon_schijnt">nee</fact>
			</when_all>
		</when_any>
		<then>
			<fact name="straat_is_nat">ja</fact>
		</then>
	</rule>

	<rule>
		<description>Als de luchtdruk laag is, regent het.</description>
		<when_all>
			<fact name="luchtdruk">laag</fact>
		</when_all>
		<then>
			<fact name="het_heeft_geregend">ja</fact>
		</then>
	</rule>

	<rule>
		<description>Als de luchtdruk niet laag is, regent het niet.</description>
		<when_all>
			<not>
				<fact name="luchtdruk">laag</fact>
			</not>
		</when_all>
		<then>
			<fact value="het_heeft_geregend">nee</fact>
		</then>
	</rule>

	<rule>
		<description>Als de zon schijnt en het niet regent, zijn de straten niet nat.</description>
		<when_all>
			<fact name="zon_schijnt">ja</fact>
		</when_all>
		<then>
			<fact value="straat_is_nat">nee</fact>
		</then>
	</rule>

	<question>
		<description>Hoe is het met de luchtdruk vandaag?</description>
		<option>
			<description>De luchtdruk is laag</description>
			<then>
				<fact name="luchtdruk">laag</fact>
			</then>
		</option>
		<option>
			<description>De luchtdruk is hoog</description>
			<then>
				<fact name="luchtdruk">hoog</fact>
			</then>
		</option>
	</question>

	<question>
		<description>Schijnt de zon vandaag?</description>
		<option>
			<description>De zon schijnt</description>
			<then>
				<fact name="zon_schijnt">ja</fact>
			</then>
		</option>
		<option>
			<description>De zon schijnt niet</description>
			<then>
				<fact name="zon_schijnt">nee</fact>
			</then>
		</option>
	</question>

	<question>
		<description>Regent het?</description>
		<option>
			<description>Het regent</description>
			<then>
				<fact name="het_regent">ja</fact>
			</then>
		</option>
		<option>
			<description>Het is droog</description>
			<then>
				<fact name="het_regent">nee</fact>
			</then>
		</option>
	</question>

	<goal name="straat_is_nat">
		<description>Zijn de straten nat?</description>
		<answer value="ja">De straten zijn nat.</answer>
		<answer value="nee">De straten zijn droog.</answer>
		<answer value="undefined">Ik heb werkelijk geen idee.</answer>
	</goal>
		
</knowledge>